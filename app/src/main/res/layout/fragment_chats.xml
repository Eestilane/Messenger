<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorBackground"
    tools:context=".chats.ui.ChatsFragment">

    <TextView
        android:id="@+id/chatsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/chats"
        android:textColor="?colorText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/zalupa"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/dash"
        app:layout_constraintBottom_toBottomOf="@id/chatsFragment"
        app:layout_constraintEnd_toEndOf="@id/chatsFragment"
        app:layout_constraintStart_toStartOf="@id/chatsFragment"
        app:layout_constraintTop_toTopOf="@id/chatsFragment" />

    <Button
        android:id="@+id/goToChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?colorFragment"
        android:text="@string/goToChat"
        android:textColor="?colorText"
        android:layout_marginTop="8sp"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="@id/chatsFragment"
        app:layout_constraintStart_toStartOf="@id/chatsFragment"
        app:layout_constraintTop_toBottomOf="@id/zalupa" />

</androidx.constraintlayout.widget.ConstraintLayout>